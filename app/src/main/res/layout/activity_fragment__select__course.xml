<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.golf.disc.lg.linus.dis_golf.Fragment_Select_Course">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/rl_select_course"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/tv_current_course"
            android:text="@string/selected_course"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_course_name_choice"
            android:layout_toRightOf="@id/tv_current_course"
            android:text="@string/none"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_below="@id/rl_select_course"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_height="fill_parent">
   <ListView
       android:layout_height="fill_parent"
       android:layout_width="fill_parent"
       android:id="@android:id/list"
       >

       </ListView>
        </ScrollView>
</RelativeLayout>
